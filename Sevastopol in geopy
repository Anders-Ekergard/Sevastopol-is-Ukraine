<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Platsökare</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        #map {
            height: 400px;
            width: 100%;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Platsökare</h1>
    <p>Skriv in en ort för att hitta dess koordinater:</p>
    <input type="text" id="ort" placeholder="Skriv en ort här" value="Sevastopol">
    <button onclick="findLocation()">Sök</button>
    <p id="resultat"></p>
    <div id="map"></div>

    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        let map;

        function findLocation() {
            const ort = document.getElementById('ort').value;
            fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(ort)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.length > 0) {
                        const location = data[0];
                        const displayName = location.display_name;
                        const latitude = location.lat;
                        const longitude = location.lon;

                        document.getElementById('resultat').innerHTML =
                            `${ort} är i ${displayName}. Koordinater för ${ort} är ${latitude}, ${longitude}.`;

                        if (!map) {
                            map = L.map('map').setView([latitude, longitude], 12);
                            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                            }).addTo(map);
                        } else {
                            map.setView([latitude, longitude], 12);
                        }

                        L.marker([latitude, longitude]).addTo(map)
                            .bindPopup(`${ort}<br>Lat: ${latitude}<br>Lon: ${longitude}`)
                            .openPopup();
                    } else {
                        document.getElementById('resultat').innerHTML =
                            `Kunde inte hitta koordinater för ${ort}.`;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('resultat').innerHTML =
                        `Ett fel uppstod vid sökning efter ${ort}.`;
                });
        }
    </script>
</body>
</html>
